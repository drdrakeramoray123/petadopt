<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include("../includes/head") %> <%- include("../includes/navbar") %>
        <title>User Profile</title>
    </head>
    <body class="bg-slate-200">
        <div class="container mx-auto px-4 pt-8">
            <div class="flex flex-wrap">
                <!-- Sidebar -->
                <section class="w-full md:w-1/6 lg:w-1/4 p-4">
                    <%- include("../includes/sidebar") %>
                </section>
                <!-- End Sidebar -->

                <!-- Main -->
                <section class="w-full md:w-5/6 lg:w-3/4 p-4">
                    <div
                        class="bg-white border-transparent rounded-lg shadow-lg"
                    >
                        <div
                            class="bg-blue-700 border-b-2 border-gray-400 rounded-tl-lg rounded-tr-lg p-2"
                        >
                            <h5 class="font-bold uppercase text-white">
                                User Profile - <%= userData.firstName %>
                            </h5>
                        </div>
                        <div class="p-6">
                            <form
                                action="/user/<%= userData._id %>/edit"
                                method="POST"
                            >
                                <input
                                    type="hidden"
                                    name="_csrf"
                                    value="<%= locals.csrfToken %>"
                                />
                                <section class="flex flex-row flex-wrap">
                                    <div
                                        class="flex flex-wrap mb-6 px-2 w-full md:w-1/2 lg:w-1/3"
                                    >
                                        <label
                                            for="firstName"
                                            class="block text-gray-700 text-sm font-bold mb-2"
                                        >
                                            First Name
                                        </label>
                                        <input
                                            type="text"
                                            name="firstName"
                                            id="firstName"
                                            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                                            value="<%- userData.firstName !== undefined ? userData.firstName : null %>"
                                        />
                                    </div>
                                    <div
                                        class="flex flex-wrap mb-6 px-2 w-full md:w-1/2 lg:w-1/3"
                                    >
                                        <label
                                            for="middleName"
                                            class="block text-gray-700 text-sm font-bold mb-2"
                                        >
                                            Middle Name
                                        </label>
                                        <input
                                            type="text"
                                            name="middleName"
                                            id="middleName"
                                            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                                            value="<%- userData.middleName !== undefined ? userData.middleName : null %>"
                                        />
                                    </div>
                                    <div
                                        class="flex flex-wrap mb-6 px-2 w-full md:w-1/2 lg:w-1/3"
                                    >
                                        <label
                                            for="lastName"
                                            class="block text-gray-700 text-sm font-bold mb-2"
                                        >
                                            Last Name
                                        </label>
                                        <input
                                            type="text"
                                            name="lastName"
                                            id="lastName"
                                            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                                            value="<%- userData.lastName !== undefined ? userData.lastName : null %>"
                                        />
                                    </div>
                                    <div
                                        class="flex flex-wrap mb-6 px-2 w-full md:w-1/2 lg:w-1/3"
                                    >
                                        <label
                                            for="dob"
                                            class="block text-gray-700 text-sm font-bold mb-2"
                                        >
                                            Date of Birth
                                        </label>
                                        <input
                                            type="date"
                                            name="dob"
                                            id="dob"
                                            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                                            value="<%- userData.dob !== undefined ? userData.dob : null %>"
                                        />
                                    </div>
                                    <div
                                        class="flex flex-wrap mb-6 px-2 w-full md:w-1/2 lg:w-1/3"
                                    >
                                        <label
                                            for="phoneNumber"
                                            class="block text-gray-700 text-sm font-bold mb-2"
                                        >
                                            Phone
                                        </label>
                                        <input
                                            type="text"
                                            name="phoneNumber"
                                            id="phoneNumber"
                                            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                                            value="<%- userData.phoneNumber !== undefined ? userData.phoneNumber : null %>"
                                        />
                                    </div>
                                    <div
                                        class="flex flex-wrap mb-6 px-2 w-full md:w-1/2 lg:w-1/3"
                                    >
                                        <label
                                            for="email"
                                            class="block text-gray-700 text-sm font-bold mb-2"
                                        >
                                            Email
                                        </label>
                                        <input
                                            type="email"
                                            name="email"
                                            id="email"
                                            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                                            value="<%- userData.email !== undefined ? userData.email : null %>"
                                        />
                                    </div>
                                </section>
                                <section class="flex flex-row flex-wrap">
                                    <div
                                        class="flex flex-wrap mb-6 px-2 w-full md:w-1/2 lg:w-1/3"
                                    >
                                        <label
                                            for="password"
                                            class="block text-gray-700 text-sm font-bold mb-2"
                                        >
                                            Password
                                        </label>
                                        <input
                                            type="password"
                                            name="password"
                                            id="password"
                                            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                                        />
                                    </div>
                                    <div
                                        class="flex flex-wrap mb-6 px-2 w-full md:w-1/2 lg:w-1/3"
                                    >
                                        <label
                                            for="confirmPassword"
                                            class="block text-gray-700 text-sm font-bold mb-2"
                                        >
                                            Confirm Password
                                        </label>
                                        <input
                                            type="password"
                                            name="confirmPassword"
                                            id="confirmPassword"
                                            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                                        />
                                    </div>
                                </section>
                                <section class="flex flex-row flex-wrap">
                                    <div
                                        class="flex flex-wrap mb-6 px-2 w-full md:w-1/2 lg:w-1/3"
                                    >
                                        <label
                                            for="street"
                                            class="block text-gray-700 text-sm font-bold mb-2"
                                        >
                                            Street
                                        </label>
                                        <input
                                            type="text"
                                            name="street"
                                            id="street"
                                            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                                            value="<%- userData.address !== undefined ? userData.address.street : null %>"
                                        />
                                    </div>
                                    <div
                                        class="flex flex-wrap mb-6 px-2 w-full md:w-1/2 lg:w-1/3"
                                    >
                                        <label
                                            for="city"
                                            class="block text-gray-700 text-sm font-bold mb-2"
                                        >
                                            City
                                        </label>
                                        <input
                                            type="text"
                                            name="city"
                                            id="city"
                                            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                                            value="<%- userData.address !== undefined ? userData.address.city : null %>"
                                        />
                                    </div>
                                    <div
                                        class="flex flex-wrap mb-6 px-2 w-full md:w-1/2 lg:w-1/3"
                                    >
                                        <label
                                            for="state"
                                            class="block text-gray-700 text-sm font-bold mb-2"
                                        >
                                            State
                                        </label>
                                        <input
                                            type="text"
                                            name="state"
                                            id="state"
                                            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                                            value="<%- userData.address !== undefined ? userData.address.state : null %>"
                                        />
                                    </div>
                                    <div
                                        class="flex flex-wrap mb-6 px-2 w-full md:w-1/2 lg:w-1/3"
                                    >
                                        <label
                                            for="country"
                                            class="block text-gray-700 text-sm font-bold mb-2"
                                        >
                                            Country
                                        </label>
                                        <input
                                            type="text"
                                            name="country"
                                            id="country"
                                            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                                            value="<%- userData.address !== undefined ? userData.address.country : null %>"
                                        />
                                    </div>
                                    <div
                                        class="flex flex-wrap mb-6 px-2 w-full md:w-1/2 lg:w-1/3"
                                    >
                                        <label
                                            for="postal"
                                            class="block text-gray-700 text-sm font-bold mb-2"
                                        >
                                            Postal Code
                                        </label>
                                        <input
                                            type="text"
                                            name="postal"
                                            id="postal"
                                            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                                            value="<%- userData.address !== undefined ? userData.address.postalCode : null %>"
                                        />
                                    </div>
                                </section>

                                <!-- Image Uploader -->
                                <%- include("../includes/imageUploader", {
                                multiple: false }) %>
                                <!-- End Image Uploader -->

                                <div class="flex items-center justify-between">
                                    <a
                                        class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                                        href="/user/delete/<%- userData._id %>"
                                    >
                                        <i class="fas fa-trash-alt"></i>
                                        Delete
                                    </a>
                                    <button
                                        class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                                        type="submit"
                                    >
                                        Save
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </section>
                <!-- End Main -->
            </div>
        </div>
        <%- include("../includes/footer") %>
        <script src="https://unpkg.com/create-file-list"></script>
        <script src="/scripts/imagePreview.js"></script>
    </body>
</html>
